  <script>
    function copyIP(){
      const ip = document.getElementById('serverIP').innerText;
      navigator.clipboard.writeText(ip).then(()=>{ alert('IP kopyalandÄ±: '+ip); });
    }

    async function updateServerStatus() {
      const ip = "valoriacraft.aternos.me";
      const statusEl = document.getElementById("status");
      const playersEl = document.getElementById("players");

      try {
        const response = await fetch(`https://api.mcstatus.io/v2/status/java/${ip}`);
        const data = await response.json();

        if (data && data.online) {
          statusEl.innerText = "ğŸŸ¢ Sunucu aÃ§Ä±k";
          playersEl.innerText = `Oyuncular: ${data.players.online}/${data.players.max}`;
        } else {
          statusEl.innerText = "ğŸ”´ Sunucu kapalÄ±";
          playersEl.innerText = "";
        }
      } catch (err) {
        statusEl.innerText = "âš ï¸ Durum alÄ±namadÄ±";
        playersEl.innerText = "";
      }
    }

    updateServerStatus();
    setInterval(updateServerStatus, 60000);
  </script>
